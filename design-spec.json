    "globalStyles": {
      "fontFamily": "Monda, system-ui, -apple-system, sans-serif",
      "headingSizes": {
        "h1": "clamp(2.5rem, 5vw, 4.5rem)",
        "h2": "clamp(2rem, 4vw, 3.5rem)",
        "h3": "clamp(1.5rem, 3vw, 2rem)",
        "h4": "1.25rem"
      },
      "bodyFontSize": "1rem",
      "lineHeight": 1.6,
      "spacing": {
        "xs": "0.5rem",
        "sm": "1rem",
        "md": "1.5rem",
        "lg": "2rem",
        "xl": "3rem",
        "2xl": "4rem",
        "3xl": "6rem"
      },
      "borderRadius": {
        "sm": "4px",
        "md": "8px",
        "lg": "12px",
        "xl": "16px"
      },
      "shadows": {
        "sm": "0 1px 2px rgba(0,0,0,0.05)",
        "md": "0 4px 6px rgba(0,0,0,0.07)",
        "lg": "0 10px 15px rgba(0,0,0,0.1)",
        "xl": "0 20px 25px rgba(0,0,0,0.15)"
      },
      "colorMap": {
        "primary": "brand.primaryColor",
        "secondary": "brand.secondaryColor",
        "accent": "brand.accentColor",
        "text": "brand.textColor",
        "background": "brand.backgroundColor",
        "neutralLight": "brand.neutralLight",
        "neutralDark": "brand.neutralDark"
      }
    }
  },
  "components": {
    "button": {
      "primary": {
        "backgroundColor": "primaryColor",
        "color": "#ffffff",
        "padding": "14px 32px",
        "fontSize": "1rem",
        "fontWeight": "600",
        "borderRadius": "md",
        "hover": {
          "backgroundColor": "accentColor",
          "transform": "translateY(-2px)",
          "shadow": "lg"
        }
      },
      "secondary": {
        "backgroundColor": "transparent",
        "color": "primaryColor",
        "border": "2px solid primaryColor",
        "padding": "14px 32px",
        "fontSize": "1rem",
        "fontWeight": "600",
        "borderRadius": "md",
        "hover": {
          "backgroundColor": "primaryColor",
          "color": "#ffffff"
        }
      }
    },
    "card": {
      "backgroundColor": "#ffffff",
      "padding": "32px",
      "borderRadius": "lg",
      "border": "1px solid #e5e7eb",
      "hover": {
        "shadow": "xl",
        "transform": "translateY(-4px)",
        "borderColor": "primaryColor"
      }
    },
    "eyebrow": {
      "fontSize": "0.875rem",
      "fontWeight": "700",
      "letterSpacing": "0.1em",
      "color": "primaryColor",
      "textTransform": "uppercase"
    }
  },
  "instructions": {
    "styleReference": "eraser.io",
    "goals": [
      "minimal aesthetic with generous whitespace",
      "clean typographic hierarchy using Monda font",
      "consistent use of AUREA brand orange (#fb8500)",
      "responsive design (mobile-first approach)",
      "smooth animations and micro-interactions",
      "focus on readability and scannability",
      "strong visual hierarchy with clear CTAs",
      "professional, tech-forward appearance"
    ],
    "designPrinciples": [
      "Less is more - remove unnecessary elements",
      "Breathing room - use whitespace strategically",
      "Visual rhythm - consistent spacing between sections",
      "Clear hierarchy - guide user's eye through content",
      "Purposeful color - orange for actions and emphasis only",
      "Fast loading - optimize images and animations",
      "Accessibility - ensure WCAG 2.1 AA compliance"
    ]
  }
}
